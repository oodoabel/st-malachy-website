generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model profile {
  id          String   @id              // use string for Supabase UUID
  email       String   @unique
  address     String?
  department  String?
  level       String?
  forum       String?                 
  paymentStatus String  @default("unpaid") 
  full_name   String?
  phone       String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

